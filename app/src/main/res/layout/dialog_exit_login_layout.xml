<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:background="@android:color/transparent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_sign_in_description_content"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_height="155dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="58.5dp"
            android:includeFontPadding="false"
            android:text="@string/lyy_game_me_exit"
            style="@style/Theme.LyyGame.Me.Exit"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_length"
            android:layout_marginTop="37.5dp"
            android:background="@color/color_f5f5f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/lyy_cancel"
                android:gravity="center"
                style="@style/Theme.LyyGame.Me.Exit"
                android:layout_weight="1"/>

            <View
                android:layout_width="@dimen/divide_length"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5"/>

            <TextView
                android:id="@+id/exit_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/lyy_auto_service_ensure"
                android:gravity="center"
                style="@style/Theme.LyyGame.Me.Exit"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_exit_mark"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>