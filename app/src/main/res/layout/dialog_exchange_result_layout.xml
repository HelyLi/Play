<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/exchange_dialog_root"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/bg_exchange_succeed"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/exchange_status_tv"
        style="@style/Theme.LyyGame.Text.Body.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:text="@string/lyy_exchange_succeed"/>

    <TextView
        android:id="@+id/gift_name_tv"
        style="@style/Theme.LyyGame.Text.Body.15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text=""/>

    <Button
        android:id="@+id/confirm_btn"
        style="@style/Widget.LyyGame.Button.Exchange.Confirm.Succeed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/lyy_confirm"/>


</LinearLayout>