<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:id="@+id/detail_state_iv"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:src="@drawable/ic_pay_success"/>

    <TextView
        android:id="@+id/detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/color_1c1c1c"
        android:textSize="@dimen/text_size_12"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/lyy_pay_coins"/>

    <TextView
        android:id="@+id/detail_coins_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/color_1c1c1c"
        android:textSize="@dimen/text_size_24"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:text=""/>

    <TextView
        android:id="@+id/detail_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/color_b4b4b4"
        android:textSize="@dimen/text_size_10"
        android:layout_marginBottom="18dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/lyy_pay_deal_success"/>

    <include layout="@layout/widget_recycler_view"></include>

</LinearLayout>