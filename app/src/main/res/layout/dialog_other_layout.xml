<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="155dp"
              android:layout_centerHorizontal="true"
              android:layout_gravity="center"
              android:background="@drawable/bg_sign_in_description_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/other_content_tv"
        style="@style/Theme.LyyGame.Me.Exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58.5dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="@string/lyy_game_me_exit"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_length"
        android:layout_marginTop="37.5dp"
        android:background="@color/color_f5f5f5"/>

    <TextView
        android:id="@+id/other_sure"
        style="@style/Theme.LyyGame.Me.Exit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/lyy_auto_service_ensure"/>

</LinearLayout>