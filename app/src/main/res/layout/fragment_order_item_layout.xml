<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="12dp"
    android:background="@color/color_f5f5f5"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="15dp">

    <ImageView
        android:id="@+id/mall_item_pic_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_mall_pic_default"/>

    <TextView
        android:id="@+id/mall_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mall_item_pic_iv"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@id/mall_item_pic_iv"
        android:layout_marginTop="9dp"
        style="@style/Theme.LyyGame.Text.Title.Medium"/>

    <TextView
        android:id="@+id/mall_item_coin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mall_item_name_tv"
        android:layout_below="@id/mall_item_name_tv"
        android:layout_marginTop="10dp"
        style="@style/Theme.LyyGame.Text.Label.Medium"/>

    <TextView
        android:id="@+id/mall_item_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mall_item_coin_tv"
        android:layout_below="@id/mall_item_coin_tv"
        android:layout_marginTop="6dp"
        style="@style/Theme.LyyGame.Text.Hint.Small"/>

</RelativeLayout>