<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_e9e9e9"
              android:orientation="vertical">

    <include layout="@layout/widget_toolbar"/>


    <TextView
            android:id="@+id/phone_tv"
            android:layout_width="match_parent"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/color_fff"
            android:text="请输入153****8888收到的短信验证码"
            android:layout_height="50dp"/>
    <include layout="@layout/widget_divide"/>


    <LinearLayout android:layout_width="match_parent"
                  android:paddingLeft="15dp"
                  android:background="@color/color_fff"
                  android:paddingRight="15dp"
                  android:layout_height="50dp">

        <EditText
                android:id="@+id/validate_code_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="20dp"
                android:hint="@string/lyy_game_sms_validate_code"
                android:textColorHint="@color/color_b4b4b4"
                android:inputType="number"
                android:textSize="14sp"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/validate_code_btn"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/lyy_account_auth_get"
                style="@style/Theme.LyyGame.Button.Small.Red"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <include layout="@layout/widget_divide"/>

    <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/lyy_pay_sure"
            android:enabled="false"
            style="@style/Theme.LyyGame.Button.Litter.Red"
            android:layout_height="60dp"/>


</LinearLayout>