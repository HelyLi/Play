<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bank_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_contact_service"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_toRightOf="@+id/bank_img"
                  android:layout_marginLeft="25dp"
                  android:paddingTop="20dp"
                  android:paddingBottom="18dp"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_1c1c1c"
                android:text="工商银行"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/bank_desc"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_b4b4b4"
                android:text="单笔限额5万,单日限额5万"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>