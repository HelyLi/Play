<?xml version="1.0" encoding="utf-8"?>
<com.hhly.lyygame.presentation.view.widget.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                                   android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content"
                                                                   app:ratio_width_percent="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/game_item_pic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_item_common_00"/>

        <TextView
            android:id="@+id/game_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/lyy_game_room_common_00"
            android:textColor="@color/color_fc9f00"
            android:textSize="10dp"/>

    </LinearLayout>

</com.hhly.lyygame.presentation.view.widget.RatioRelativeLayout>