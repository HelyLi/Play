<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_task_header"
    android:gravity="center">

    <TextView
        android:id="@+id/task_header_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.LyyGame.Task.Title.Large.Bold"
        android:text="@string/lyy_task_header_title_01"/>

    <TextView
        android:id="@+id/task_header_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        style="@style/Theme.LyyGame.Task.Title.Medium"
        android:text="@string/lyy_game_task_count"/>


</LinearLayout>