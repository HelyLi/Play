<?xml version="1.0" encoding="utf-8"?>
<com.hhly.lyygame.presentation.view.widget.RatioRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    app:ratio_width_percent="0.5">

    <ImageView
        android:id="@+id/game_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_game_pic_default_03"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/color_7f000000"/>

    <ImageView
        android:id="@+id/game_icon_iv"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_game_pic_default_01"/>

    <TextView
        android:id="@+id/game_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/game_icon_iv"
        android:layout_alignTop="@id/game_icon_iv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        style="@style/Theme.LyyGame.Game.Name"/>

    <TextView
        android:id="@+id/game_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_name_tv"
        android:layout_alignLeft="@id/game_name_tv"
        android:layout_marginTop="10dp"
        style="@style/Theme.LyyGame.Game.Description"/>


</com.hhly.lyygame.presentation.view.widget.RatioRelativeLayout>