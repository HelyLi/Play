<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Theme.LyyGame.Menu.List.Me"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/menu_left_item"
        style="@style/Theme.LyyGame.Menu.List.Me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_left_item_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_me_address"/>

            <TextView
                android:id="@+id/menu_left_item_name_tv"
                style="@style/Theme.LyyGame.Text.Title.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:text="收货地址"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_f5f5f5"/>

    <RelativeLayout
        android:id="@+id/menu_right_item"
        style="@style/Theme.LyyGame.Menu.List.Me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_right_item_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_me_address"/>

            <TextView
                android:id="@+id/menu_right_item_name_tv"
                style="@style/Theme.LyyGame.Text.Title.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:text="收货地址"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>