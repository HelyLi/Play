<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:gravity="right|bottom"  android:left="70dp" android:top="25dp">

                <bitmap android:src="@drawable/ic_pay_amount_selected" android:tileMode="disabled"/>
            </item>
            <item>
                <shape>
                    <stroke android:width="2dp" android:color="@color/color_e7384a"/>
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_selected="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/color_b4b4b4"/>
        </shape>
    </item>
</selector>